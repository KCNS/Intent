<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.padcmm.intent_kcns.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_share"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_map"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Navigate to Map"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_call_ph"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Call Phone"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_send_email"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_take_camera_pic"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Take Picture with Camera"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_select_picture"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Select Picture from Storage"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_save_event_calendar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Save event in Calendar"
            android:textAllCaps="false" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
